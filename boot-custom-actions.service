[Unit]
Description=Boot custom actions
After=network.target
Before=display-manager.service

[Service]
Type=oneshot
User=playnix
Group=playnix
ExecStart=/usr/local/bin/boot-custom-actions.sh
RemainAfterExit=yes
TimeoutStartSec=90
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target